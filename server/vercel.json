{
    "version": 2,
    "installCommand": "npm install --legacy-peer-deps",
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "npm run build",
          "outputDirectory": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1",
        "continue": true
      },
      {
        "src": "/[^.]+",
        "dest": "client/dist/index.html",
        "status": 200
      }
    ]
  }